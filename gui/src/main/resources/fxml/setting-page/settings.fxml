<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<?import java.net.URL?>
<?import com.jfoenix.controls.JFXToggleButton?>
<?import com.jfoenix.controls.JFXSlider?>
<?import javafx.scene.layout.HBox?>
<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.Pane?>

<?import com.jfoenix.controls.JFXTextField?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import javafx.scene.control.TextArea?>
<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="500.0"
            prefWidth="700.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.catas.wicked.proxy.gui.controller.SettingController">
    <stylesheets>
        <URL value="@../../css/setting-page.css"/>
        <URL value="@../../css/common-design.css"/>
    </stylesheets>
    <TabPane fx:id="settingTabPane" styleClass="setting-tab-pane" rotateGraphic="true" side="LEFT" tabClosingPolicy="UNAVAILABLE"
             AnchorPane.bottomAnchor="-10.0" AnchorPane.leftAnchor="-10.0"
             AnchorPane.rightAnchor="-10.0" AnchorPane.topAnchor="-10.0">
        <Tab text="General" styleClass="setting-tab-1">
            <!-- <ScrollPane hbarPolicy="NEVER" vbarPolicy="ALWAYS"> -->
            <AnchorPane>
                <GridPane AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="15.0"
                          AnchorPane.topAnchor="15.0" AnchorPane.bottomAnchor="40.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="NEVER" maxWidth="120.0" minWidth="120.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="450" minWidth="100.0" prefWidth="400"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="45.0" prefHeight="45.0" vgrow="NEVER"/>
                        <RowConstraints minHeight="45.0" prefHeight="45.0" vgrow="NEVER"/>
                        <RowConstraints minHeight="45.0" prefHeight="45.0" vgrow="NEVER"/>

                        <RowConstraints prefHeight="10.0" vgrow="NEVER"/>
                        <RowConstraints minHeight="45.0" prefHeight="45.0" maxHeight="75" vgrow="SOMETIMES"/>
                        <RowConstraints prefHeight="10.0" vgrow="NEVER"/>
                        <RowConstraints minHeight="45.0" prefHeight="45.0" maxHeight="75" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <Label text="Language"/>
                    <!-- <Label text="Theme Color" GridPane.rowIndex="1"/> -->
                    <Label text="Record" GridPane.rowIndex="1"/>
                    <Label text="Max-Record Size(M)" GridPane.rowIndex="2"/>
                    <Label text="Include" GridPane.rowIndex="4"/>
                    <Label text="Exclude" GridPane.rowIndex="6"/>

                    <JFXComboBox GridPane.columnIndex="1" />
                    <JFXToggleButton GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    <JFXTextField GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    <TextArea GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                    <TextArea GridPane.columnIndex="1" GridPane.rowIndex="6"/>
                </GridPane>
            </AnchorPane>
            <!-- </ScrollPane> -->
        </Tab>
        <Tab text="Proxy Settings" styleClass="setting-tab-server, setting-tab-2">
            <AnchorPane>
                <GridPane AnchorPane.leftAnchor="20.0"
                          AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="NEVER" maxWidth="120.0" minWidth="120.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="450" minWidth="100.0" prefWidth="400"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="45.0" prefHeight="45.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="45.0" prefHeight="45.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="45.0" prefHeight="45.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="45.0" prefHeight="45.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="45.0" prefHeight="45.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <Label text="HTTP-Proxy Port"/>
                    <Label text="Max-Record Size(M)" GridPane.rowIndex="1"/>
                    <Label text="System Proxy" GridPane.rowIndex="2"/>
                    <Label text="Throttle level" GridPane.rowIndex="3"/>

                    <JFXTextField fx:id="portField" GridPane.columnIndex="1" prefWidth="120" />
                    <JFXTextField fx:id="maxSizeField" GridPane.columnIndex="1" prefWidth="120" GridPane.rowIndex="1"/>
                    <JFXToggleButton fx:id="systemProxyField" mnemonicParsing="false" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    <JFXSlider GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                </GridPane>
            </AnchorPane>
        </Tab>
        <Tab text="SSl Settings" styleClass="setting-tab-ssl, setting-tab-3">
            <AnchorPane>
                <GridPane AnchorPane.leftAnchor="20.0"
                          AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="NEVER" maxWidth="120.0" minWidth="120.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="450" minWidth="100.0" prefWidth="400"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="45.0" prefHeight="45.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="45.0" prefHeight="45.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="45.0" prefHeight="45.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="45.0" prefHeight="45.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="45.0" prefHeight="45.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <Label text="HTTP-Proxy Port"/>
                    <Label text="Max-Record Size(M)" GridPane.rowIndex="1"/>
                    <Label text="System Proxy" GridPane.rowIndex="2"/>

                    <JFXTextField GridPane.columnIndex="1" prefWidth="120" />
                    <JFXTextField GridPane.columnIndex="1" prefWidth="120" GridPane.rowIndex="1"/>
                    <JFXToggleButton mnemonicParsing="false" GridPane.columnIndex="1"
                                     GridPane.rowIndex="2"/>
                </GridPane>
            </AnchorPane>
        </Tab>
        <Tab text="External Proxy" styleClass="setting-tab-external, setting-tab-4">
            <AnchorPane>
                <GridPane AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="15.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="NEVER" maxWidth="120.0" minWidth="120.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="450" minWidth="100.0" prefWidth="400"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="45.0" prefHeight="45.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="45.0" prefHeight="45.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="45.0" prefHeight="45.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="45.0" prefHeight="45.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="45.0" prefHeight="45.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="45.0" prefHeight="45.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <Label text="Proxy type"/>
                    <Label text="Host" GridPane.rowIndex="1"/>
                    <Label text="Port" GridPane.rowIndex="2"/>
                    <Label text="Proxy Auth" GridPane.rowIndex="3"/>
                    <Label text="Username" fx:id="exUsernameLabel" visible="false" GridPane.rowIndex="4"/>
                    <Label text="Password" fx:id="exPasswordLabel" visible="false" GridPane.rowIndex="5"/>

                    <JFXComboBox fx:id="proxyComboBox" GridPane.columnIndex="1"/>
                    <JFXTextField fx:id="exProxyHost" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    <JFXTextField fx:id="exProxyPort" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    <JFXToggleButton fx:id="exProxyAuth" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                    <JFXTextField fx:id="exUsername" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                    <JFXTextField fx:id="exPassword" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                </GridPane>
            </AnchorPane>
        </Tab>
        <!-- <Tab text="Help" styleClass="setting-tab-help, setting-tab-5"> -->
        <!--     <AnchorPane> -->
        <!--     </AnchorPane> -->
        <!-- </Tab> -->
    </TabPane>

    <HBox styleClass="settings-btn"
          prefHeight="40.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="190.0" AnchorPane.rightAnchor="0.0">
        <JFXButton text="Reset" styleClass="reset-btn">
            <HBox.margin>
                <Insets left="10.0" />
            </HBox.margin>
        </JFXButton>
        <Pane HBox.hgrow="ALWAYS"/>
        <JFXButton fx:id="saveBtn" onAction="#save" text="Save" styleClass="save-btn">
            <HBox.margin>
                <Insets left="10.0" />
            </HBox.margin>
        </JFXButton>
        <JFXButton fx:id="cancelBtn" text="Cancel" onAction="#cancel" styleClass="cancel-btn">
            <HBox.margin>
                <Insets left="10.0" />
            </HBox.margin>
        </JFXButton>
        <JFXButton text="Apply" onAction="#apply" styleClass="apply-btn">
            <HBox.margin>
                <Insets left="10.0" right="5.0"/>
            </HBox.margin>
        </JFXButton>
    </HBox>
</AnchorPane>
